<!-- Start Header Area -->
<header id="header">
	<div class="container">
		<div class="row align-items-center justify-content-between d-flex">
			<div id="logo">
				<a href="/"><img src="../../public/img/logo.png" alt="" title="" /></a>
			</div>
			<nav id="nav-menu-container">
				<ul class="nav-menu">
					{{!-- <li><button class="btn btn-link btn-sm order-1 order-lg-0" id="sidebarToggle" href="#"><i
								class="fas fa-bars"></i></button></li> --}}
					{{!-- <li><a href="/">Home</a></li> --}}
					<li id="sidebarToggle"><a href="#"><i class="fa fa-bars" aria-hidden="true"></i>Category</a></li>
				</ul>
			</nav><!-- #nav-menu-container -->
			<div class="input-wrap">
				<form action="/Search" class="form-box d-flex justify-content-between">
					<input type="text" placeholder="Search Courses" class="form-control" name="coursename">
					<button type="submit" class="btn search-btn" style="color: white;"><i class="fa fa-search"
							aria-hidden="true"></i>Search</button>
				</form>
			</div>
			<a href="/Cart" id='Cartlogo' style="position:relative"><i class="fa fa-shopping-basket"
					style="font-size:36px;color:white"></i><small style="position: absolute; top: -10px;width:20px;height: 20px; background: red; border-radius: 50%; text-align:center; color: white">{{demcart.dem}}</small></a>
			<div id="Logout"><a href="/logout" style="color: white;"><i class="fa fa-user-circle"></i>Logout</a></div>
			<div id="Login"><a href="/login" style="color: white;"><i class="fa fa-user-circle"></i>Login/Register</a>
			</div>
			{{!-- <div id = "Register"><a href="/login" style="color: white;">Register</a></div> --}}
		</div>
	</div>
	<div style="display: none" id="checkuser">{{CheckUser}}</div>
</header>
<script>

	const checkuser = document.getElementById('checkuser').innerHTML;
	if (checkuser == 'true') {
		document.getElementById('Login').style.display = "none";
	} else {
		document.getElementById('Logout').style.display = "none";
		document.getElementById('Cartlogo').style.display = "none";
	}

	$(document).ready(function(){       
        var scroll_pos = 0;
        $(document).scroll(function() {
            scroll_pos = $(this).scrollTop();
            if(scroll_pos > 300) {
                $("#header").css('background-color', '#39cfca');
            }
			else {
				 $("#header").css('background-color', 'transparent')
			}
        });
    });
</script>
<!-- End Header Area -->